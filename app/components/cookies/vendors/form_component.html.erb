<div class="cookies-vendors">
  <%= form_tag cookies_consent_path, method: :post do %>
    <%= hidden_field_tag :allow_cookies, "custom" %>
    <ul>
      <% vendors.each do |vendor| %>
        <li id="<%= dom_id(vendor) %>">
          <%= render Cookies::SwitchComponent.new(vendor.cookie,
                                                  label: vendor.name,
                                                  description: vendor.description,
                                                  checked: enabled?(vendor),
                                                  disabled: false) %>
        </li>
      <% end %>
    </ul>

    <div class="save-preferences">
      <%= submit_tag t("cookies_setup.save_preferences") %>
    </div>
  <% end %>
</div>
